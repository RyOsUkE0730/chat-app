      <%= message.user.name %>
    </div>
    <div class="main--time--stamp">
      <%= message.created_at %>
    
    </div>
  </div>
  <div class="chat--lower--content">
    <div class="main--message">
      <!-- 投稿したメッセージ内容を記述する -->
      <%= message.content %>
    </div>
  </div>
</div>